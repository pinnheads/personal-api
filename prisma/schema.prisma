datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    email    String  @unique
    username String
    token    String
    password String
    isAdmin  Boolean @default(false)
    basics   Basics?
}

model Basics {
    id                String @id @default(auto()) @map("_id") @db.ObjectId
    user              User   @relation(fields: [userId], references: [id])
    userId            String @unique @db.ObjectId
    firstName         String
    middleName        String
    lastName          String
    summary           String
    location          String
    label             String
    url               String
    yearsOfExperience Int
    blog              String
    profile           Url[]
}

model Url {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    label    String
    url      String
    basics   Basics @relation(fields: [basicsId], references: [id])
    basicsId String @unique @db.ObjectId
}
